                        <lb xml:id="pag_17_line_10" n="10" facs="#pag17_line10"/> 
                        voisins</distinct></term>.</ab><ab type="pericope" xml:id="pag_17_per_3" n="3"> Par <term ref="#exemple"><choice><orig resp="#FDS"><abbr>exe.</abbr></orig><reg resp="#EF"><expan><ex>mple</ex></expan></reg></choice></term>, si j’admets qu’il existe 
                        <lb xml:id="pag_17_line_11" n="11" facs="#pag17_line11"/> 
                        <choice><orig resp="#FDS">1</orig><reg resp="#EF">un</reg></choice> <term ref="#dsav"><choice><orig resp="#FDS"><abbr>dial.</abbr></orig><reg resp="#EF"><expan><ex>ecte</ex></expan></reg></choice> savoyard</term>, mon <term ref="#premiere"><choice><orig resp="#FDS"><abbr type="superscription">1ere</abbr></orig><reg resp="#EF"><expan>premier</expan></reg></choice></term> <term ref="#devoir">devoir</term> est de 
                        <lb xml:id="pag_17_line_12" n="12" facs="#pag17_line12"/> 
                        poser en quoi ce <term ref="#dialecte"><choice><orig resp="#FDS"><abbr>dial.</abbr></orig><reg resp="#EF"><expan><ex>ecte</ex></expan></reg></choice></term> est <term ref="#différent">différent</term> de <choice><orig resp="#FDS"><abbr>tt</abbr></orig><reg resp="#EF"><expan>tout</expan></reg></choice> 
                        <lb xml:id="pag_17_line_13" n="13" facs="#pag17_line13"/> 
                        autre <term ref="#dfran"><choice><orig resp="#FDS"><abbr>dial.</abbr></orig><reg resp="#EF"><expan><ex>ecte</ex></expan></reg></choice> français</term>.
                        <add>
                            <note xml:id="pag_17_note_1" facs="#pag17_note1" n="1" resp="#FDS" place="margin">
